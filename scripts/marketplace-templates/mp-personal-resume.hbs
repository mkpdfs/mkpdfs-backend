<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: 'Helvetica Neue', Arial, sans-serif; color: #333; line-height: 1.5; }
    .resume { max-width: 800px; margin: 0 auto; display: grid; grid-template-columns: 280px 1fr; }
    .sidebar { background: #1e293b; color: white; padding: 40px 30px; }
    .main { padding: 40px; }
    .name { font-size: 28px; font-weight: 700; margin-bottom: 5px; }
    .title { font-size: 16px; opacity: 0.8; margin-bottom: 30px; }
    .contact { margin-bottom: 30px; }
    .contact h3 { font-size: 12px; text-transform: uppercase; letter-spacing: 2px; opacity: 0.6; margin-bottom: 15px; }
    .contact p { font-size: 13px; margin-bottom: 8px; display: flex; align-items: center; gap: 10px; }
    .contact p::before { content: ''; width: 4px; height: 4px; background: #60a5fa; border-radius: 50%; }
    .skills { margin-bottom: 30px; }
    .skills h3 { font-size: 12px; text-transform: uppercase; letter-spacing: 2px; opacity: 0.6; margin-bottom: 15px; }
    .skill-tags { display: flex; flex-wrap: wrap; gap: 8px; }
    .skill-tag { background: rgba(255,255,255,0.1); padding: 6px 12px; border-radius: 4px; font-size: 12px; }
    .education { margin-bottom: 30px; }
    .education h3 { font-size: 12px; text-transform: uppercase; letter-spacing: 2px; opacity: 0.6; margin-bottom: 15px; }
    .education p { font-size: 14px; margin-bottom: 4px; }
    .education .school { font-weight: 600; }
    .education .year { font-size: 12px; opacity: 0.7; }
    .section { margin-bottom: 35px; }
    .section h2 { font-size: 18px; color: #1e293b; text-transform: uppercase; letter-spacing: 2px; padding-bottom: 10px; border-bottom: 2px solid #1e293b; margin-bottom: 20px; }
    .summary { font-size: 15px; color: #666; line-height: 1.7; }
    .experience-item { margin-bottom: 25px; }
    .experience-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 10px; }
    .experience-header h3 { font-size: 16px; color: #333; }
    .experience-header .company { font-size: 14px; color: #60a5fa; font-weight: 500; }
    .experience-header .period { font-size: 13px; color: #999; }
    .achievements { list-style: none; }
    .achievements li { font-size: 14px; color: #666; padding-left: 20px; position: relative; margin-bottom: 8px; }
    .achievements li::before { content: 'â–¸'; position: absolute; left: 0; color: #60a5fa; }
  </style>
</head>
<body>
  <div class="resume">
    <div class="sidebar">
      <h1 class="name">{{name}}</h1>
      <div class="title">{{title}}</div>

      <div class="contact">
        <h3>Contact</h3>
        <p>{{email}}</p>
        <p>{{phone}}</p>
        <p>{{location}}</p>
        <p>{{linkedin}}</p>
      </div>

      <div class="skills">
        <h3>Skills</h3>
        <div class="skill-tags">
          {{#each skills}}
          <span class="skill-tag">{{this}}</span>
          {{/each}}
        </div>
      </div>

      <div class="education">
        <h3>Education</h3>
        <p class="school">{{education.degree}}</p>
        <p>{{education.school}}</p>
        <p class="year">{{education.year}}</p>
      </div>
    </div>

    <div class="main">
      <div class="section">
        <h2>Professional Summary</h2>
        <p class="summary">{{summary}}</p>
      </div>

      <div class="section">
        <h2>Experience</h2>
        {{#each experience}}
        <div class="experience-item">
          <div class="experience-header">
            <div>
              <h3>{{role}}</h3>
              <div class="company">{{company}}</div>
            </div>
            <div class="period">{{period}}</div>
          </div>
          <ul class="achievements">
            {{#each achievements}}
            <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</body>
</html>
